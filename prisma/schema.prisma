generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employee {
  id              String      @id @default(uuid())
  firstname       String
  middlename      String?
  lastname        String
  address         String
  dateOfBirth     DateTime
  salary          Float
  isActive        Boolean
  activeInCompany DateRange[]
  department      Department  @relation(fields: [departmentId], references: [id])
  departmentId    String
}

model Department {
  id       String     @id @default(uuid())
  name     String
  employee Employee[]
}

model DateRange {
  id         String   @id @default(uuid())
  startDate  DateTime
  endDate    DateTime?
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  type       String
}
